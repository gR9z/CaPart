{% extends 'base.html.twig' %}

{% block title %}Update a profil{% endblock %}

{% block body %}
    <div class="">
        <h1 class="text-2xl font-bold text-center mb-4 dark:text-gray-200">Update a profil</h1>
        <div class="flex items-center justify-center p-12">
            <div class="mx-auto w-full max-w-[550px] bg-white">
                {{ form_start(form) }}

                <div class="mb-4">
                    {{ form_label(form.username, 'Username', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    {{ form_widget(form.username, {'attr': {'class': 'shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'your@email.com', 'required': 'required', 'autofocus': 'autofocus'}}) }}
                    {% if form.username.vars.errors|length > 0 %}
                        <div class="text-red-500 text-sm mt-2">
                            {{ form_errors(form.username) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4">
                    {{ form_label(form.firstName, 'First Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    {{ form_widget(form.firstName, {'attr': {'class': 'shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'First Name'}}) }}
                    {% if form.firstName.vars.errors|length > 0 %}
                        <div class="text-red-500 text-sm mt-2">
                            {{ form_errors(form.firstName) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4">
                    {{ form_label(form.lastName, 'Last Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    {{ form_widget(form.lastName, {'attr': {'class': 'shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Last Name'}}) }}
                    {% if form.lastName.vars.errors|length > 0 %}
                        <div class="text-red-500 text-sm mt-2">
                            {{ form_errors(form.lastName) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4">
                    {{ form_label(form.phoneNumber, 'Phone Number', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    {{ form_widget(form.phoneNumber, {'attr': {'class': 'shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Phone Number'}}) }}
                    {% if form.phoneNumber.vars.errors|length > 0 %}
                        <div class="text-red-500 text-sm mt-2">
                            {{ form_errors(form.phoneNumber) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4">
                    {{ form_label(form.email, 'Email Address', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Enter your email'}}) }}
                    {% if form.email.vars.errors|length > 0 %}
                        <div class="text-red-500 text-sm mt-2">
                            {{ form_errors(form.email) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4">
                    {{ form_label(form.plainPassword.first, 'Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'}}) }}
                    {% if form.plainPassword.first.vars.errors|length > 0 %}
                        <div class="text-red-500 text-sm mt-2">
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4">
                    {{ form_label(form.plainPassword.second, 'Confirm Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.location, 'Location', {'label_attr': {'class':'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    {{ form_widget(form.location, {'attr': {'class': 'shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'}}) }}
                    {% if form.location.vars.errors|length > 0 %}
                        <div class="text-red-500 text-sm mt-2">
                            {{ form_errors(form.location) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4">
                    {{ form_label(form.image, 'Upload an image', {'label_attr': {'class': 'block  text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    {{ form_widget(form.image, {'attr': {'class': 'shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'}}) }}
                    {% if form.image.vars.errors|length > 0 %}
                        <div class="text-red-500 text-sm mt-2">
                            {{ form_errors(form.image) }}
                        </div>
                    {% endif %}
                </div>

                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center">
                        {{ form_widget(form.agreeTerms, {'attr': {'class': 'h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 focus:outline-none'}}) }}
                        {{ form_label(form.agreeTerms, 'Agree to Terms', {'label_attr': {'class': 'ml-2 block text-sm text-gray-700 dark:text-gray-300'}}) }}
                    </div>

                    <div class="mb-4">
                        {% if form.agreeTerms.vars.errors|length > 0 %}
                            <div class="text-red-500 text-sm mt-2">
                                {{ form_errors(form.agreeTerms) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="flex items-center space-x-4 mb-4">
                    {{ form_widget(form.save, {'attr': {'class': 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md
                    shadow-sm text-sm font-medium text-white bg-[#fd00c5] hover:bg-[#fd00c5] focus:outline-none
                    focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'}}) }}
                    {{ form_widget(form.cancel, {'attr': {'class': 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md
                    shadow-sm text-sm font-medium text-white bg-[#fd00c5] hover:bg-[#fd00c5] focus:outline-none
                    focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'}}) }}
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
