<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
{% include 'header/header.html.twig' %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="font-bold relative mb-4 block p-4 text-lg/normal text-white opacity-100
            {% if label == 'success' %} bg-green-500
            {% elseif label == 'error' %} bg-red-500
            {% elseif label == 'warning' %} bg-orange-500
            {% elseif label == 'info' %} bg-blue-500
            {% else %} bg-gray-500
            {% endif %}
        ">
            <p class="container mx-auto px-7 text-center">{{ message|upper }}</p>
        </div>
    {% endfor %}
{% endfor %}

<main class="py-5 px-7 my-12 container mx-auto">
    {% block body %}{% endblock %}
</main>

{% include 'footer/footer.html.twig' %}
</body>
</html>
