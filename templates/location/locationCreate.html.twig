{% extends 'base.html.twig' %}

{% block title %}Create a location!{% endblock %}

{% block body %}
    <div class="">
        <h1 class="text-2xl font-bold text-center mb-4 dark:text-gray-200">Create a location</h1>
        <div class="flex items-center justify-center p-12">
            <div class="mx-auto w-full max-w-[550px] bg-white">

                {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_label(form.name, 'Location name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Location name', 'required': 'required', 'autofocus': 'autofocus'}}) }}
                    {% if form.name.vars.errors|length > 0 %}
                        <div class="text-red-500 text-sm mt-2">
                            {{ form_errors(form.name) }}
                        </div>
                    {% endif %}
                </div>

                <div class="flex items-center space-x-4 mb-4">
                    {{ form_widget(form.save, {'attr': {'class': 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md
                    shadow-sm text-sm font-medium text-white bg-[#fd00c5] hover:bg-[#fd00c5] focus:outline-none
                    focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'}}) }}
                    {{ form_widget(form.cancel, {'attr': {'class': 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md
                    shadow-sm text-sm font-medium text-gray-900 bg-gray-200 focus:outline-none
                    focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'}}) }}
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
